{
  "name": "dental",
  "version": "1.0.0",
  "description": "",
  "main": "main.js",
  "scripts": {
    "build": "vite build",
    "start": "vite",
    "electron": "electron .",
    "dev": "concurrently \"cross-env VITE_DEV=true vite\" \"cross-env VITE_DEV=true electron .\"",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "build": {
    "appId": "com.dentalclinic.app",
    "productName": "Dental Clinic Management",
    "directories": {
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "main.js",
      "preload.js",
      "db.db",
      "node_modules/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "build/favicon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "build/favicon.ico"
    },
    "linux": {
      "target": "AppImage",
      "icon": "build/favicon.ico"
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "electron": "^40.1.0",
    "mysql2": "^3.16.3",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "react-icons": "^5.5.0",
    "react-router-dom": "^7.13.0",
    "react-to-print": "^3.2.0",
    "react-toastify": "^11.0.5",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^5.1.3",
    "autoprefixer": "^10.4.24",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron-rebuild": "^3.2.9",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.19",
    "vite": "^7.3.1"
  }
}
